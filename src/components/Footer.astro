---
import Container from "./ui/Container.astro";
import Input from "./ui/Input.astro";
import Button from "./ui/Button.astro";
---

<footer class="bg-slate-900 text-white min-h-[240px] py-11">
  <Container>
    <div class="flex h-[100px]">
      <div class="w-1/4 flex h-full flex-col space-y-11 justify-between">
        <div>
          <img
            src="../../assets/images/logo.svg"
            alt="logo"
            style="fill: white;"
          />
        </div>
        <ul class="unstyled flex space-x-3 mt-auto">
          <li>
            <img src="../../assets/images/icon-facebook.svg" alt="facebook" />
          </li>
          <li>
            <img src="../../assets/images/icon-instagram.svg" alt="instagram" />
          </li>
          <li>
            <img src="../../assets/images/icon-pinterest.svg" alt="pinterest" />
          </li>
          <li>
            <img src="../../assets/images/icon-twitter.svg" alt="twitter" />
          </li>
          <li>
            <img src="../../assets/images/icon-youtube.svg" alt="youtube" />
          </li>
        </ul>
      </div>
      <div class="w-1/4">
        <ul class="unstyled space-y-4">
          <li><a href="#">Home</a></li>
          <li><a href="#">Pricing</a></li>
          <li><a href="#">Products</a></li>
          <li><a href="#">About Us</a></li>
        </ul>
      </div>
      <div class="w-1/4">
        <ul class="unstyled space-y-4">
          <li><a href="#">Careers</a></li>
          <li><a href="#">Community</a></li>
          <li><a href="#">Privacy Policy</a></li>
        </ul>
      </div>
      <div class="w-1/4">
        <div class="flex space-x-3">
          <Input placeholder="Updates in your inbox..." />
          <Button label="Go" bg_class="bg-orange-600" text_color="text-white" />
        </div>
      </div>
    </div>
  </Container>
</footer>
