---
import { Image } from "astro:assets";
interface Props {
  name: string;
  quote: string;
  svg: string;
}

const { name, quote, svg } = Astro.props;
---

<div class="flex flex-col items-center">
  <div>
    <Image src={svg} alt=`${name}` width={100} height={100} />
  </div>
  <p>{name}</p>
  <p>{quote}</p>
</div>
